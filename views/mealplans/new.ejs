<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title></title>
    <link rel="stylesheet" href="/../styles.css">
  </head>
  <body>
    <%- include ('../partials/nav.ejs') %>
    <div class="container">
      <div class="add-dish">
        <form class="new-form" action="/mealplans" method="POST">
          <fieldset class="all-info">
            <!-- Breakfast -->
            <legend>Create Your Meal Plan</legend>
            <label for="breakfast">Breakfast</label>
            <select id="breakfast" name="breakfast">
              <% for(let i = 0; i < foods.length; i++) { %>
                  <option><%=foods[i].name%></option>
              <% } %>
            </select>
            <!-- Lunch -->
            <label for="lunch">Lunch</label>
            <select id="lunch" name="lunch">
              <% for(let i = 0; i < foods.length; i++) { %>
                  <option><%=foods[i].name%></option>
              <% } %>
            </select>
            <!-- Dinner -->
            <label for="dinner">Dinner</label>
            <select id="dinner" name="dinner">
              <% for(let i = 0; i < foods.length; i++) { %>
                  <option><%=foods[i].name%></option>
              <% } %>
            </select>
            <!-- submit form -->
            <input type="submit" value="CREATE NEW FOOD">
          </fieldset>
        </form>
      </div>
    </div>
    <div class="display-container">
      <% for(let i = 0; i < foods.length; i++) { %>
          <div class="display">
            <img src="<%=foods[i].img%>" alt="<%=foods[i].name%>">
          </div>
        <% } %>
    </div>
  </body>
</html>
