<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title></title>
    <link rel="stylesheet" href="../styles.css">
  </head>
  <body>
    <%- include ('../partials/nav.ejs') %>
    <div class="plan-index-container">
        <% for (let i = 0; i < plans.length; i++) { %>
            <div class="plan-index-card">
              <div class="date">
                <% let date = new Date(plans[i].createdAt)
                let day = date.getDate()
                let month = date.getMonth()
                let year = date.getFullYear()
                let fullDate = (`${month}/${day}/${year}`) %>
                <h1><a href="/mealplans/<%=plans[i].id%>"><%= fullDate %></a></h1>
              </div>
              <a href="/mealplans/edit">Edit</a>
              <div class="plan-index-card-flex">
                <div class="horarios">
                  <h1>Breakfast: <%= plans[i].breakfast %></h1>
                </div>
                <div class="horarios">
                  <h1>Lunch: <%= plans[i].lunch %></h1>
                </div>
                <div class="horarios">
                  <h1>Dinner: <%= plans[i].dinner %></h1>
                </div>
                <div class="note">
                  <h1>Notes:</h1>
                  <p><%=plans[i].notes%></p>
                </div>
              </div>
              <form action="/mealplans/note/edit?_method=PUT" method="post">
                <h3>Add Note:</h3>
                <input type="hidden" name="id" value="<%=plans[i].id%>">
                <textarea id="textarea" name="notes"></textarea>
                <input type="submit" value="SUBMIT" name="note">
              </form>
              <div class="buttons">
                <form class="plan-form" action="/mealplans?_method=DELETE" method="post">
                  <input type="hidden" name="id" value="<%=plans[i].id%>">
                  <input type="submit" value="DELETE">
                </form>
              </div>
            </div>
        <% } %>
    </div>
  </body>
</html>
