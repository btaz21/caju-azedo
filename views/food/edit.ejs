<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title></title>
    <link rel="stylesheet" href="/../styles.css">
  </head>
  <body class="food-edit-body">
    <%- include ('../partials/nav.ejs') %>
    <div class="container">
      <form action="/foods/<%=user.id%>/<%=food.id%>/<%=index%>?_method=PUT" method="POST">
        <fieldset>
          <legend>Details of the Dish</legend>
          <!-- name of dish -->
          <label for="name">Name</label>
          <input id="name" type="text" name="name" value="<%= food.name %>">
          <!-- description -->
          <label for="description">Description</label>
          <textarea id="description" name="description"><%= food.description %></textarea>
          <!-- etymology -->
          <label for="etymology">Etymology of Name</label>
          <textarea id="etymology" name="etymology"><%= food.etymology %></textarea>
          <!-- image link -->
          <label for="img">Image Link</label>
          <input id="img" type="text" name="img" value="<%= food.img %>">
          <!-- recipe link -->
          <label for="recipe">Recipe</label>
          <input id="recipe" type="text" name="recipe" value="<%= food.recipe %>">
          <!-- submit form -->
          <input type="hidden" name="index" value="<%=index%>">
          <input type="submit" value="SUBMIT CHANGES">
        </fieldset>
      </form>
    </div>
  </body>
</html>
